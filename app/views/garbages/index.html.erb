<h1>Garbages#index</h1>

<%= link_to "Add New", new_garbage_path, :class=>"btn btn-info" %>

<table class="table">
<tr>
	<th> name </th>
	<th> description </th>
	<th></th>
</tr>

<% @garbages.each do |g| %>
	<tr>
		<td> <%= link_to g.name, garbage_path(g) %> </td>
		<td> <%= g.description %> </td>
		<td> <%= link_to "Edit", edit_garbage_path(g), :class=>"btn btn-info"%>
				 <%= link_to "Delete", garbage_path(g), :method=>:delete, :class=>"btn btn-info", :data=>{:confirm=>"Are you sure?"} %>
		</td>
	</tr>
<% end %>

</table>


